import { useState } from "react";
import { FaFacebook, FaTwitter, FaInstagram, FaLinkedin } from "react-icons/fa";

const Footer = () => {
  const [email, setEmail] = useState("");
  const [isSubscribed, setIsSubscribed] = useState(false);

  const handleSubmit = (e) => {
    e.preventDefault();
    if (email) {
      setIsSubscribed(true);
      setEmail("");
    }
  };

  const footerLinks = [
    {
      title: "Company",
      links: ["About Us", "Careers", "Press", "Blog"]
    },
    {
      title: "Support",
      links: ["Help Center", "Safety Center", "Community Guidelines"]
    },
    {
      title: "Legal",
      links: ["Privacy Policy", "Terms of Service", "Cookie Policy"]
    }
  ];

  return (
    <footer className="bg-card dark:bg-dark-card text-foreground dark:text-dark-foreground pt-16 pb-8">
      <div className="container mx-auto px-4">
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div className="space-y-6">
            <div className="flex items-center">
              <img
                src="https://images.unsplash.com/photo-1599305445671-ac291c95aaa9"
                alt="Brand Logo"
                className="h-10 w-auto object-contain"
                onError={(e) => {
                  e.target.src = "https://images.unsplash.com/photo-1599305445671-ac291c95aaa9";
                }}
              />
            </div>
            <p className="text-accent dark:text-dark-accent text-sm">
              Stay connected with us for the latest updates and news.
            </p>
            <div className="flex space-x-4">
              <FaFacebook className="text-accent hover:text-primary cursor-pointer text-xl" />
              <FaTwitter className="text-accent hover:text-primary cursor-pointer text-xl" />
              <FaInstagram className="text-accent hover:text-primary cursor-pointer text-xl" />
              <FaLinkedin className="text-accent hover:text-primary cursor-pointer text-xl" />
            </div>
          </div>

          {footerLinks.map((section, index) => (
            <div key={index} className="space-y-4">
              <h3 className="text-lg font-heading">{section.title}</h3>
              <ul className="space-y-2">
                {section.links.map((link, idx) => (
                  <li key={idx}>
                    <button className="text-accent dark:text-dark-accent hover:text-primary dark:hover:text-dark-primary transition-colors duration-200">
                      {link}
                    </button>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>

        <div className="mt-12 pt-8 border-t border-border dark:border-dark-border">
          <div className="max-w-md mx-auto">
            <h4 className="text-center text-lg font-heading mb-4">
              Subscribe to our Newsletter
            </h4>
            <form onSubmit={handleSubmit} className="flex flex-col sm:flex-row gap-4">
              <input
                type="email"
                value={email}
                onChange={(e) => setEmail(e.target.value)}
                placeholder="Enter your email"
                className="flex-1 px-4 py-2 rounded-sm border border-input dark:border-dark-input bg-background dark:bg-dark-background focus:outline-none focus:ring-2 focus:ring-ring dark:focus:ring-dark-ring"
                required
              />
              <button
                type="submit"
                className="bg-primary hover:bg-primary/90 text-primary-foreground px-6 py-2 rounded-sm transition-colors duration-200"
              >
                Subscribe
              </button>
            </form>
            {isSubscribed && (
              <p className="text-center text-sm text-primary mt-2">
                Thank you for subscribing!
              </p>
            )}
          </div>
        </div>

        <div className="mt-12 text-center text-sm text-accent dark:text-dark-accent">
          <p>Â© {new Date().getFullYear()} Your Company. All rights reserved.</p>
        </div>
      </div>
    </footer>
  );
};

export default Footer;